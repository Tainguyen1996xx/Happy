<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_button_fb"
    android:layout_marginBottom="5dp"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:id="@+id/img_rv_order_detail"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center_vertical"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Price"
                android:textSize="15sp"
                android:textColor="#374089"
                android:fontFamily="@font/montserrat_bold"
                android:id="@+id/tv_product_price_order"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Discount"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold"
                android:id="@+id/tv_product_discount_order"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/ic_thumb_up"
                android:id="@+id/img_thumb_up"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:text="Qty: "
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"
                android:id="@+id/tv_qty_order"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:text="Size: "
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"
                android:id="@+id/tv_size_order"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>