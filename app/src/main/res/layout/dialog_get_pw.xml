<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điền tên đăng nhập"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hệ thống sẽ gửi mã xác nhận qua email được liên kết với tài khoản"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_username_get_pw"
        android:hint="Tên đăng nhập"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button_payment"
            android:text="Gửi yêu cầu"
            android:textColor="@color/white"
            android:id="@+id/btn_send_request_pw"/>
    </LinearLayout>
</LinearLayout>