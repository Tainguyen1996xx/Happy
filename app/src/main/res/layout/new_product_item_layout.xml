<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_marginEnd="5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_product_main_avatar"
            android:layout_width="152dp"
            android:layout_height="138dp"
            android:layout_marginStart="2dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:src="@drawable/test_img2" />

        <TextView
            android:id="@+id/tv_my_product_name"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_marginTop="15dp"
            android:text="Product name"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp">

            <ImageButton
                android:id="@+id/btn_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/white"
                android:src="@drawable/ic_avatar2"
                app:cardElevation="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingLeft="5dp"
                android:text="Tradly"
                android:textColor="#4F4F4F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_my_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nunito_bold"
                android:paddingLeft="5dp"
                android:text="800.000 Ä‘"
                android:textColor="#374089"
                android:textSize="14sp" />


        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
