<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.BrandsProductAct"
    android:weightSum="10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#374089"
        android:gravity="center"
        android:text="Brands"
        android:id="@+id/tv_brand_title"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="22sp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/img_brand_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhãn hiệu thời trang đến từ Anh"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_brand_location"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:id="@+id/tv_brand_description"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spn_fill_product"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:id="@+id/ll_fill_price_brand_product">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Giá trị tăng dần"
                android:id="@+id/tv_fill_price_brand_product"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sort_increase"
                android:id="@+id/img_fill_price_brand_product"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_brand_product"/>
    </LinearLayout>
</LinearLayout>