<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_content_top"
    android:backgroundTint="@color/grey_bg_light"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="GIỚI TÍNH"
        android:textColor="@color/text"
        android:textSize="30dp"
        android:textStyle="bold" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp">

        <RadioButton
            android:id="@+id/radio_layout_dialog_changeSex_khac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Khác"
            android:textColor="@color/text"
            android:textSize="25dp"/>
        <RadioButton
            android:id="@+id/radio_layout_dialog_changeSex_nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Nam"
            android:textColor="@color/text"
            android:textSize="25dp"/>
        <RadioButton
            android:id="@+id/radio_layout_dialog_changeSex_nu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Nữ"
            android:textColor="@color/text"
            android:textSize="25dp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_layout_dialog_changeSex_cancel"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="CANCEL"
            android:textColor="@color/grey_active"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_layout_dialog_changeSex_ok"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="OK"
            android:textColor="@color/green_active"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>